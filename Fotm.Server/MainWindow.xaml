                    ToolTip="Test Connection"
                    Command="{Binding StartJobsCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="UI/Images/run.ico"
                           Height="25"/>
                    <TextBlock 
                           Margin="5,0,0,0"
                           VerticalAlignment="Center"
